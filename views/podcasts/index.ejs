<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/show.css" />
<%- include('../partials/nav') %>


<main id="font">

  <h1>Podcast List</h1>
  <table id="thetable">
    <thead id="font">
      <tr>
        <th>Title</th>
        <th>Special Guest</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%# Oh hey, this is an ejs comment! It starts with a # %>
      <% podcasts.forEach(podcast => { %>
      <tr>
          <td><%= podcast.title %></td>
          <td><%= podcast.guest %></td>
          <td><a href="/podcasts/<%= podcast._id %>" id="detaillink">DETAILS</a></td>
          <td>
          
            <form action="/podcasts/<%= podcast._id %>?_method=DELETE" method="POST">
              <button id="button">X</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>

<%- include('../partials/footer') %>